<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<h4>Name: <%= @user.name %></h4>
<h4>Email: <%= @user.email %></h4>
<h6>Created at: <%= @user.created_at %></h6>
<h6>Updated at: <%= @user.updated_at %></h6>
<p><%= Time.now %></p>
